using System.Collections;
using UnityEngine;

public class Coin : MonoBehaviour
{
    public float lifetime = 5f; // Time the coin will stay on screen before disappearing
    private Vector2 screenBounds; // To define the screen boundaries

    void Start()
    {
        // Calculate screen boundaries based on camera view
        screenBounds = Camera.main.ScreenToWorldPoint(new Vector3(Screen.width, Screen.height, Camera.main.transform.position.z));
        
        // Set a random position within screen bounds
        transform.position = new Vector3(
            Random.Range(-screenBounds.x, screenBounds.x),
            Random.Range(-screenBounds.y, screenBounds.y),
            0
        );

        // Start the countdown to destroy the coin
        StartCoroutine(DestroyAfterTime());
    }

    private IEnumerator DestroyAfterTime()
    {
        // Wait for the specified lifetime duration, then destroy the coin
        yield return new WaitForSeconds(lifetime);
        Destroy(this.gameObject);
    }
}
